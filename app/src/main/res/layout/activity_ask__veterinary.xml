<ScrollView android:id="@+id/layout_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/watermark_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        tools:context="ratnatech.farmerapp.Fragment.Ask">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/MyDarkToolbarStyle"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="212px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/cultivation_practice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cultivation_practice"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/breed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/breed"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/feed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/feed"
                android:scaleType="fitXY"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="212px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/disease"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/disease"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/housing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/housing"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/training"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/training"
                android:scaleType="fitXY"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="212px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/insurance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/insurance"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>