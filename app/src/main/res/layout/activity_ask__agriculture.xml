<ScrollView android:id="@+id/layout_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/watermark_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        tools:context="ratnatech.farmerapp.Fragment.Ask">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/MyDarkToolbarStyle"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
        
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="212px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/cultivationpractice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/cultivation_practice"
                android:scaleType="fitXY"
                android:layout_weight="1"/>


            <ImageView
                android:id="@+id/soil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/soil"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/seed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/seed"
                android:scaleType="fitXY"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="212px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/fertiliser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fertiliser"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/disease_pest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/disease_pest"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/irrigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/irrigation"
                android:scaleType="fitXY"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="212px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/insurance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/insurance"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/training"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/training"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/processing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/processing"
                android:scaleType="fitXY"
                android:layout_weight="1"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="212px"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/machinery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/machinery"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>